<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/text_padding_left">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter an Hexadecimal Color : "
        android:textSize="@dimen/text_size" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="24dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#"
            android:textSize="@dimen/text_size"
            android:layout_marginLeft="@dimen/edittext_color_padding"
            />

    <EditText
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/edittext_color_padding"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/coloredittext"
        android:maxLength="6" />


    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/color_view_height"
        android:layout_marginRight="@dimen/edittext_color_padding"
        android:layout_marginLeft="@dimen/edittext_color_padding"
        android:id="@+id/colorview"
        />


</LinearLayout>